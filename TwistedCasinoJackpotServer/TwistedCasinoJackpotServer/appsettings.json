{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },

  "Session": {
    "SecurePolicy": "Always",
    "SameSite": "None"
  },
  "Cors": {
    "AllowedOrigins": ["https://production-domain.com"],
    "AllowedMethods": ["GET", "POST"],
    "AllowedHeaders": ["Content-Type"],
    "AllowCredentials": false
  },
  "AllowedHosts": "https://production-domain.com"
}
